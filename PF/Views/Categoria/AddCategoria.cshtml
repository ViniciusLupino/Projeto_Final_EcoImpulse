@model CategoriaDataTransferObj
@{
	ViewData["Title"] = "AddCategoria";
}
<div style="width:50%;">
	<h1>AddCategoria</h1>
	<a asp-action="Index" asp-controller="Categoria" class="btn btn-primary">Voltar</a>
	<form asp-action="AddCategoria">
		<div class="my-2">
			<label>Categoria</label>
			<input type="text" class="form-control" asp-for="CategoriaNome" />
			<span asp-validation-for="CategoriaNome" class="text-danger"></span>
		</div>
		<div class="my-2">
			<button type="submit" class="btn btn-info">Adicionar</button>
		</div>
	</form>
</div>
