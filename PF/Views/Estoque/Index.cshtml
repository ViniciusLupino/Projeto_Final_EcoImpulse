@model IEnumerable<EstoqueDisplayModel>
@{
	ViewData["Title"] = "Index";
}

<h2>Estoques</h2>

<form asp-action="Index" method="get" class="my-2 d-flex gap-2">
	<input type="text" name="sTerm" class="form-control w-25" placeholder="Pesquise por produto" />
	<button type="submit" class="btn btn-primary">Pesquisar</button>
	<a asp-action="Index" asp-controller="Estoque" class="btn btn-danger">Limpar</a>
</form>

<table class="table table-bordered">
	<tr>
		<th>Produto</th>
		<th>Estoque</th>
		<th>Ações</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.ProdutoNome</td>
			<td>@item.Quantidade</td>
			<td>
				<a asp-action="ManejarEstoque" asp-controller="Estoque" asp-route-produtoId="@item.ProdutoId" class="btn btn-info">Atualizar estoque</a>
			</td>
		</tr>
	}
</table>